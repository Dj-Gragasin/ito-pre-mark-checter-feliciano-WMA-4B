# Backend local environment template (secret-free)
# Copy to: activecore-db/.env.local
# Local load order: .env.local (preferred) then .env

NODE_ENV=development

# If behind a proxy (Render/NGINX/Cloudflare), set to 1
TRUST_PROXY=0

# ==================== DATABASE (PostgreSQL / Supabase) ====================
# Preferred: a single connection string
DATABASE_URL=

# Optional: split config (only used if DATABASE_URL is empty)
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=
DB_NAME=postgres

# SSL (Supabase typically requires SSL)
DB_SSL=true
# For local dev, if you see SELF_SIGNED_CERT_IN_CHAIN, set this to false
DB_SSL_REJECT_UNAUTHORIZED=false

# Optional CA certificate
# IMPORTANT: dotenv does not handle multi-line values well.
# If you need a CA, either:
# - Put it on one line with \n escapes, OR
# - Add support for DB_SSL_CA_FILE and point it at a .pem file.
DB_SSL_CA=

# ==================== AUTH ====================
JWT_SECRET=

# ==================== CORS / URLS ====================
# Comma-separated list
ALLOWED_ORIGINS=http://localhost:3000
FRONTEND_URL=http://localhost:3000
APP_URL=http://localhost:3000

# ==================== RATE LIMITING ====================
AUTH_RATE_LIMIT_MAX=20
GENERAL_RATE_LIMIT_MAX=300
REGISTER_RATE_LIMIT_MAX=10

# ==================== PAYPAL ====================
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_MODE=sandbox

# ==================== OPENAI (Optional) ====================
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4o

# ==================== EMAIL (Optional) ====================
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
FROM_EMAIL=

# ==================== NOTIFICATIONS ====================
INACTIVE_NOTIFY_DAYS=3

# ==================== MONITORING / LOGGING ====================
SENTRY_DSN=
LOG_LEVEL=info
