# Backend Environment Variables Template
# Copy as .env and fill with actual values

# ==================== DATABASE ====================
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=
DB_NAME=activecore
DB_POOL_SIZE=10
DB_QUEUE_LIMIT=0

# ==================== JWT & AUTH ====================
# CRITICAL: Must be at least 32 random characters
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-key-at-least-32-characters-long
JWT_EXPIRES=24h
BCRYPT_ROUNDS=12

# ==================== PASSWORD POLICY ====================
# Passwords must be:
# - Minimum 8 characters
# - Contains uppercase letter
# - Contains lowercase letter
# - Contains number
PASSWORD_MIN_LENGTH=8

# ==================== API CONFIGURATION ====================
NODE_ENV=production
PORT=3002

# ==================== CORS ====================
# Comma-separated list of allowed origins
# If not set, falls back to FRONTEND_URL
ALLOWED_ORIGINS=https://yourdomain.com,https://app.yourdomain.com

# Alternative (legacy): used if ALLOWED_ORIGINS not set
FRONTEND_URL=https://yourdomain.com

# Allow ngrok.io for development/testing (set to 'true' to enable)
ALLOW_NGROK=false

CORS_CREDENTIALS=true

# ==================== PAYPAL ====================
PAYPAL_CLIENT_ID=your-paypal-client-id
PAYPAL_CLIENT_SECRET=your-paypal-client-secret
PAYPAL_MODE=sandbox
# Change to 'live' for production after testing

# ==================== OPENAI ====================
# Leave empty to disable AI features gracefully
OPENAI_API_KEY=sk-your-openai-key
OPENAI_MODEL=gpt-4o

# ==================== GYM CONFIGURATION ====================
GYM_ADDRESS=123 Fitness Street, Barangay Rizal, Makati City
GYM_HOURS=Mon-Sun, 6:00 AM - 10:00 PM
GYM_PHONE=+63-2-1234-5678
GYM_EMAIL=contact@activecore.gym

# ==================== FRONTEND URL ====================
FRONTEND_URL=https://yourdomain.com

# ==================== LOGGING & MONITORING ====================
LOG_LEVEL=info
SENTRY_DSN=
DATADOG_API_KEY=

# ==================== EMAIL (Optional) ====================
# For password reset, notifications
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@activecore.gym

# ==================== SESSION & SECURITY ====================
SESSION_SECRET=your-session-secret-change-me
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=5

# ==================== FEATURES ====================
ENABLE_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false
REQUIRE_EMAIL_VERIFICATION=false
ENABLE_TWO_FACTOR_AUTH=false

# ==================== DEVELOPMENT ONLY ====================
# Set these only in development environment
# NEVER in production
ALLOW_CORS_ORIGIN_ALL=false
DEBUG_SQL=false
ALLOW_UNVERIFIED_PAYMENTS=false
